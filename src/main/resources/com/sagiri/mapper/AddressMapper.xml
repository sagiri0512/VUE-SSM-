<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.sagiri.mapper.AddressMapper">
    <!--    查全部信息-->
    <select id="selectAddressByUid" resultType="com.sagiri.pojo.Address">
        SELECT * FROM address WHERE Uid = #{uid}
    </select>

    <update id="updateByAid" parameterType="com.sagiri.pojo.Address">
            UPDATE address SET AText = #{aText}, APhonenNmber = #{aPhonenNmber}, AName = #{aName} WHERE Aid = #{aid}
    </update>

    <insert id="addAddress" parameterType="com.sagiri.pojo.Address">
        INSERT INTO address (Uid, AText, APhonenNmber, AName) VALUES (#{uid}, #{aText}, #{aPhonenNmber}, #{aName})
    </insert>

    <delete id="deleteByAid" parameterType="long">
        DELETE FROM address WHERE Aid = #{aid}
    </delete>
</mapper>
